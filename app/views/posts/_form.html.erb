<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :body, label: false, input_html: { class: "textarea has-fixed-size", rows: "2" }, wrapper: false, label_html: 
        { class: "label" }, placeholder: "What's on your mind " + current_user.name + "?", autofocus: true %>
    </div>
  </div>

  <div class="buttons">
    <label class="file-label">
      <%= f.file_field :image, class:"file-input", type:"file" %>
      <span class="file-cta is-info">
        <span class="file-icon">
          <i class="fas fa-camera"></i>
        </span>
        <span class="file-label">
          Add photo
        </span>
      </span>
    </label>

    <%= f.submit "Post", class: "button is-info post" %>
  </div>
<% end %>